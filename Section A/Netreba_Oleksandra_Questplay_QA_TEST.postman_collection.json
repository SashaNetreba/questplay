							"//Make sure that the number that's returned matches the one that was sent in the post \r",
							"//request\r",
							"\r",
							"let responseJson = pm.response.json();\r",
							"let storedId = pm.collectionVariables.get(\"objectId\");\r",
							"\r",
							"pm.test(\"GET ID matches stored ID\", function () {\r",
							"    pm.expect(responseJson.id).to.equal(storedId);\r",
							"});\r",
							"\r",
							"pm.test(\"GET Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"console.log(\"GET ID:\", responseJson.id);\r",
							"console.log(\"Stored ID:\", storedId);\r",
							"\r",
							"//In case order of API requests will be changed by mistake\r",
