	"item": [
		{
			"name": "Post Object",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"//Generate a random number to use throughout the test",
							"pm.collectionVariables.set(\"randomNumber\", Math.floor(Math.random() * 1000000));",
							"",
							"//I used this method, but also we can use here timestamp, uuid (depends on the test needs)"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"let responseJson = pm.response.json();",
							"let objectId = responseJson.id;",
							"",
							"// Clear old value first (just in case)",
							"//pm.collectionVariables.unset(\"objectId\");",
							"",
							"// Store new ID",
							"pm.collectionVariables.set(\"objectId\", responseJson.id);",
							"",
							"pm.test(\"POST status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"POST response contains ID\", function () {",
							"    pm.expect(responseJson.id).to.exist;",
							"    pm.expect(responseJson.id).to.be.a(\"string\");",
							"});",
							"",
							"console.log(\"NEW Stored objectId:\", responseJson.id);",
							"console.log(\"Show only ID:\", { id: pm.response.json().id });",
							"",
							"//In case order of API requests will be changed by mistake",
							"// pm.execution.setNextRequest(\"GET\");"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"data\": {{randomNumber}}\n}\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "https://api.restful-api.dev/objects",
					"protocol": "https",
					"host": [
						"api",
						"restful-api",
						"dev"
					],
					"path": [
						"objects"
					]
				}
			},
			"response": []
		},
		{
